{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="d-flex flex-column align-items-center h-100 px-3 px-lg-5 pt-5">
        <div class="w-100 mt-auto" style="max-width: 526px;">
            <h1>Reset your password</h1>
            <p class="pb-3 mb-3 mb-lg-4">
                Enter your email address and we’ll send you a link to reset your password.
            </p>

            {{ form_start(requestForm, { 'attr': { 'class': 'needs-validation', 'novalidate': '' } }) }}

            <div class="pb-3 mb-3">
                <div class="position-relative">
                    <i class="ai-mail fs-lg position-absolute top-50 start-0 translate-middle-y ms-3"></i>
                    {{ form_widget(requestForm.email, {
                        'attr': {
                            'class': 'form-control form-control-lg ps-5',
                            'placeholder': 'Email'
                        }
                    }) }}
                </div>
                {{ form_errors(requestForm.email) }}
            </div>

            <button class="btn btn-lg btn-primary w-100 mb-4">Send password reset email</button>

            {{ form_end(requestForm) }}
        </div>

        <p class="nav w-100 fs-sm pt-5 mt-auto mb-5" style="max-width: 526px;">
            <span class="text-body-secondary">© All rights reserved. Made by</span>
            <a class="nav-link d-inline-block p-0 ms-1" href="https://createx.studio/" target="_blank" rel="noopener">
                Createx Studio
            </a>
        </p>
    </div>
{% endblock %}
