{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center h-100 px-3 px-lg-5 pt-5">
        <div class="w-100 mt-auto" style="max-width: 526px;">
            <h1>Reset your password</h1>

            {{ form_start(resetForm, { attr: { class: 'needs-validation', novalidate: '' } }) }}
            <div class="pb-3 mb-3">
                {{ form_row(resetForm.plainPassword.first, {
                    attr: {
                        placeholder: 'New password',
                        class: 'form-control form-control-lg'
                    },
                    label: false
                }) }}
            </div>

            <div class="pb-3 mb-4">
                {{ form_row(resetForm.plainPassword.second, {
                    attr: {
                        placeholder: 'Repeat password',
                        class: 'form-control form-control-lg'
                    },
                    label: false
                }) }}
            </div>

            <button class="btn btn-lg btn-primary w-100 mb-4" type="submit">
                Reset password
            </button>
            {{ form_end(resetForm) }}
        </div>

        <p class="nav w-100 fs-sm pt-5 mt-auto mb-5" style="max-width: 526px;">
            <span class="text-body-secondary">Â© All rights reserved. Made by</span>
            <a class="nav-link d-inline-block p-0 ms-1" href="https://createx.studio/" target="_blank" rel="noopener">
                Createx Studio
            </a>
        </p>
    </div>
{% endblock %}
