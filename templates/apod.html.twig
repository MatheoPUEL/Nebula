{% extends 'base.html.twig' %}

{% block title %}Hello ApodController!{% endblock %}

{% block body %}

    <div class="container" style="margin-top: 150px;">

        <h1>Astronomie Picture Of The Day</h1>
        <p>It is a NASA program that features a spectacular image of the universe every day, accompanied by an explanation written by astronomers.</p>

        {# Formulaire simple qui redirige en GET #}
        <form method="get" class="mt-3" onsubmit="redirectToDate(event)">
            <label for="apod_date_input">Choice a date to see the picture of that day</label>
            <div class="input-group">
                <button type="submit" class="btn btn-primary">{{ 'search'|trans }}</button>
                <input
                    id="apod_date_input"
                    type="date"
                    class="form-control"
                    placeholder="Button on the left"
                    min="1995-06-16"
                    max="{{ 'now'|date('Y-m-d') }}"
                    required
                />
            </div>
        </form>

        {% if error is defined %}
            <div class="alert alert-warning alert-dismissible fade show mt-4" role="alert">
                {{ 'the_date_must'|trans }} 1995-06-16 & {{ "now"|date("Y-m-d") }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% else %}
            <div class="row justify-content-center">
                <div class="col-md-4 mt-3">
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Title: </strong>{{ apod.title }}</li>
                        <li class="list-group-item"><strong>Copyright:</strong> {{ apod.copyright }}</li>
                        <li class="list-group-item"><strong>Date:</strong> {{ apod.dateApod|date('Y-m-d') }}</li>
                        <li class="list-group-item"><strong>Explanation: </strong> {{ apod.explanation }}</li>

                        <li class="list-group-item">
                            <a href="{{ asset('images/apod' ~ apod.hdpath) }}" target="_blank" class="btn btn-primary w-100">See image in HD</a>
                        </li>
                    </ul>
                </div>

                <div class="col-md-8 d-flex justify-content-center mt-3">
                    <div class="photo-container">
                        <img class="rounded-2" src="{{ asset('images/apod' ~ apod.path) }}" alt="Photo" id="photo-image">
                    </div>
                </div>
            </div>



            <h2 class="mt-4">Commentaires</h2>
            {% if app.user %}
                <div class="mt-4 card">
                    <div class="card-body p-3">
                        <div class="card-title d-flex align-items-center gap-2">
                            <h5 class="mb-0">Ajouter un commentaire</h5>
                        </div>
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-primary">Envoyer</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            {% endif %}

            {% macro render_comment(comment) %}
                <div class="mt-4 card {% if comment.parent %} border-left-manual {% endif %}ms-{{ comment.parent ? 0 : 0 }}">
                    <div class="card-body p-3">
                        <div class="card-title d-flex align-items-center gap-2">
                            <a href="{{ path('app_user', {'username': comment.author.username }) }}" style="text-decoration: none">
                                <img class="rounded-circle bg-size-cover bg-position-center flex-shrink-0"
                                     style="width: 35px; height: 35px;"
                                     src="{{ asset('user/img/avatar/' ~ comment.author.avatar) }}" alt="">
                            </a>

                            <div class="d-flex align-items-center gap-1">
                                <a href="{{ path('app_user', {'username': comment.author.username }) }}" style="text-decoration: none">
                                    <h5 class="mb-0">{{ comment.author.username }}</h5>
                                </a>
                                <span class="text-muted">- {{ comment.createdAt|date('d/m/Y') }}</span>
                                {% if app.user %}
                                <a href="#Collapse{{ comment.id }}" class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="collapseExample">
                                    répondre
                                </a>
                                {% endif %}
                            </div>
                        </div>

                        <p class="card-text">{{ comment.content }}</p>

                        <div class="collapse" id="Collapse{{ comment.id }}">
                            <form action="{{ path('app_comment_reply', { parentId: comment.id }) }}" method="POST">
                                <textarea name="content" class="form-control" placeholder="Votre réponse..." rows="2"></textarea>
                                <input type="hidden" name="return_url" value="{{ app.request.uri }}">
                                <button class="btn btn-primary btn-sm mt-2">Envoyer</button>
                            </form>
                        </div>

                        {# Boucle récursive pour afficher les enfants #}
                        {% for child in comment.children %}
                            {{ _self.render_comment(child) }}
                        {% endfor %}
                    </div>
                </div>
            {% endmacro %}

            {# Ensuite, pour afficher tous les commentaires principaux #}
            {% import _self as comments_macro %}

            {% if comments is not empty %}
                {% for comment in comments %}
                    {% if comment.parent is null %}
                        {{ comments_macro.render_comment(comment) }}
                    {% endif %}
                {% endfor %}
            {% else %}
                <p>Aucun commentaire pour le moment.</p>
            {% endif %}

        {% endif %}
    </div>
    <style>
        .border-left-manual {
            border: none;
             border-left: solid 1px var(--ar-secondary-bg);
            border-radius: 0;
        }
    </style>
    {# JS pour rediriger vers /apod/YYYY-MM-DD #}
    <script>
        function redirectToDate(event) {
            event.preventDefault();
            const input = document.getElementById('apod_date_input');
            if (input.value) {
                window.location.href = `/apod/${input.value}`;
            }
        }
    </script>

{% endblock %}
