{% extends 'base.html.twig' %}

{% block title %}Hello ApodController!{% endblock %}

{% block body %}

    <div class="container" style="margin-top: 150px;">

        <h1>Astronomie Picture Of The Day</h1>
        <p>It is a NASA program that features a spectacular image of the universe every day, accompanied by an explanation written by astronomers.</p>

        {# Formulaire simple qui redirige en GET #}
        <form method="get" class="mt-3" onsubmit="redirectToDate(event)">
            <label for="apod_date_input">Choice a date to see the picture of that day</label>
            <div class="input-group">
                <button type="submit" class="btn btn-primary">{{ 'search'|trans }}</button>
                <input
                    id="apod_date_input"
                    type="date"
                    class="form-control"
                    placeholder="Button on the left"
                    min="1995-06-16"
                    max="{{ 'now'|date('Y-m-d') }}"
                    required
                />
            </div>
        </form>

        {% if error is defined %}
            <div class="alert alert-warning alert-dismissible fade show mt-4" role="alert">
                {{ 'the_date_must'|trans }} 1995-06-16 & {{ "now"|date("Y-m-d") }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% else %}
            <div class="row justify-content-center">
                <div class="col-md-4 mt-3">
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Title: </strong>{{ apod.title }}</li>
                        <li class="list-group-item"><strong>Copyright:</strong> {{ apod.copyright }}</li>
                        <li class="list-group-item"><strong>Date:</strong> {{ apod.dateApod|date('Y-m-d') }}</li>
                        <li class="list-group-item"><strong>Explanation: </strong> {{ apod.explanation }}</li>

                        <li class="list-group-item">
                            <a href="{{ asset('images/apod' ~ apod.hdpath) }}" target="_blank" class="btn btn-primary w-100">See image in HD</a>
                        </li>
                    </ul>
                </div>

                <div class="col-md-8 d-flex justify-content-center mt-3">
                    <div class="photo-container">
                        <img class="rounded-2" src="{{ asset('images/apod' ~ apod.path) }}" alt="Photo" id="photo-image">
                    </div>
                </div>
            </div>
        {% endif %}
    </div>

    {# JS pour rediriger vers /apod/YYYY-MM-DD #}
    <script>
        function redirectToDate(event) {
            event.preventDefault();
            const input = document.getElementById('apod_date_input');
            if (input.value) {
                window.location.href = `/apod/${input.value}`;
            }
        }
    </script>

{% endblock %}
