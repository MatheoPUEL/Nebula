{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center h-100 px-3 px-lg-5 pt-5">
        <div class="w-100 mt-auto" style="max-width: 526px;">
            <h1>Sign in to Nebula</h1>
            <p class="pb-3 mb-3 mb-lg-4">Don't have an account yet?&nbsp;&nbsp;<a href="{{ path('app_register') }}">Register here!</a></p>

            {% if error %}
                <div class="alert alert-danger pb-3 mb-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="alert alert-warning pb-3 mb-4">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <form class="needs-validation" method="post" novalidate="">
                {# Email #}
                <div class="pb-3 mb-3">
                    <div class="position-relative">
                        <i class="ai-mail fs-lg position-absolute top-50 start-0 translate-middle-y ms-3"></i>
                        <input
                            placeholder="Email"
                            class="form-control form-control-lg ps-5
                            {% if error %}is-invalid{% elseif last_username is not empty %}is-valid{% endif %}"
                            type="email"
                            value="{{ last_username }}"
                            name="_username"
                            id="username"
                            autocomplete="email"
                            required
                            autofocus
                        >
                    </div>
                    {% if error %}
                        <div class="invalid-feedback d-block">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                </div>

                {# Password #}
                <div class="mb-4">
                    <div class="position-relative">
                        <i class="ai-lock-closed fs-lg position-absolute top-50 start-0 translate-middle-y ms-3"></i>
                            <input
                                placeholder="Password"
                                class="form-control form-control-lg ps-5 {% if error %}is-invalid{% elseif app.request.get('_password') is not empty %}is-valid{% endif %}"
                                type="password"
                                name="_password"
                                id="password"
                                autocomplete="current-password"
                                required
                            >
                    </div>
                    {% if error %}
                        <div class="invalid-feedback d-block">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                </div>

                <div class="d-flex flex-wrap align-items-center justify-content-between pb-4">
                    <div class="form-check my-1">
                        <input class="form-check-input" type="checkbox" id="keep-signedin">
                        <label class="form-check-label ms-1" for="keep-signedin">Keep me signed in</label>
                    </div>

                    <a class="fs-sm fw-semibold text-decoration-none my-1" href="{{ path('app_forgot_password_request') }}">Forgot password?</a>
                </div>

                <button class="btn btn-lg btn-primary w-100 mb-4" type="submit">Sign in</button>

                <!-- Sign in with social account -->
                <h2 class="h6 text-center pt-3 pt-lg-4 mb-4">Or sign in with your social account</h2>
                <div class="row row-cols-1 row-cols-sm-2 gy-3">
                    <div class="col">
                        <a class="btn btn-icon btn-outline-secondary btn-google btn-lg w-100" href="#">
                            <i class="ai-google fs-xl me-2"></i>
                            Google
                        </a>
                    </div>
                    <div class="col">
                        <a class="btn btn-icon btn-outline-secondary btn-facebook btn-lg w-100" href="#">
                            <i class="ai-facebook fs-xl me-2"></i>
                            Facebook
                        </a>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
            </form>
        </div>

        <!-- Copyright -->
        <p class="nav w-100 fs-sm pt-5 mt-auto mb-5" style="max-width: 526px;">
            <span class="text-body-secondary">Â© All rights reserved. Made by</span>
            <a class="nav-link d-inline-block p-0 ms-1" href="https://createx.studio/" target="_blank" rel="noopener">Createx Studio</a>
        </p>
    </div>
{% endblock %}
